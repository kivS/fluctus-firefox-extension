{
  "applications": {
    "gecko": {
      "id": "fluctus@https://kivs.github.io/Fluctus"
    }
  },
  "name": "__MSG_appName__",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",

  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },

  "default_locale": "en",

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://localhost/*",
    "contextMenus",
    "notifications"
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "__MSG_titleOnAction__"
  }
}
